<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Blogs - Blogitech.io</title>
    <link rel="shortcut icon" href="/images/Untitled-1.png" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary': '#6366f1',
                        'primary-dark': '#4f46e5',
                        'secondary': '#ec4899',
                        'accent': '#06b6d4',
                        'dark': '#0f172a',
                        'dark-light': '#1e293b',
                    }
                }
            }
        }
    </script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
        body { font-family: 'Inter', sans-serif; }
        .gradient-bg { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
        .glass-effect { backdrop-filter: blur(20px); background: rgba(255, 255, 255, 0.1); }
        .hover-lift { transition: transform 0.3s ease, box-shadow 0.3s ease; }
        .hover-lift:hover { transform: translateY(-8px); box-shadow: 0 20px 40px rgba(0,0,0,0.1); }
        .line-clamp-3 {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
</head>
<body class="bg-gray-50 text-gray-900">
    <!-- Header -->
    <nav class="fixed top-0 w-full z-50 glass-effect">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"/>
                            <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"/>
                        </svg>
                    </div>
                    <a class="text-2xl font-bold gradient-text cursor-pointer" href="/">Blogitech.io</a>
                </div>
                
                <div class="hidden md:flex space-x-8">
                    <a href="/" class="text-gray-700 hover:text-purple-600 font-medium transition-all duration-300">Home</a>
                    <a href="/blogs" class="text-purple-600 font-medium">All Blogs</a>
                    <a href="/blog/createblog" class="text-gray-700 hover:text-purple-600 font-medium transition-all duration-300">Write A Blog</a>
                </div>
                
                <div class="flex items-center space-x-4">
                    <% if(typeof user !== 'undefined' && user !== null){ %>
                        <div class="flex items-center space-x-3">
                            <div class="relative">
                                <% if(user.profileImage) { %>
                                    <img class="w-10 h-10 object-cover rounded-full border-2 border-purple-500 ring-2 ring-purple-100" src="<%= user.profileImage %>" alt="Profile">
                                <% } else { %>
                                    <div class="w-10 h-10 bg-gradient-to-br from-purple-500 to-blue-500 rounded-full border-2 border-purple-500 ring-2 ring-purple-100 flex items-center justify-center">
                                        <span class="text-white font-semibold text-sm"><%= user.fullname.charAt(0).toUpperCase() %></span>
                                    </div>
                                <% } %>
                                <div class="absolute -bottom-1 -right-1 w-4 h-4 bg-green-500 rounded-full border-2 border-white"></div>
                            </div>
                            <p class="font-semibold text-gray-700">Welcome, <%= user.fullname %></p>
                            <a href="/user/logout" 
                               class="px-6 py-2 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-full font-semibold hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
                                Logout
                            </a>
                        </div>
                    <% } else { %>
                        <a href="/blog/createblog" 
                           class="px-6 py-2 border border-purple-600 text-purple-600 rounded-full font-semibold hover:bg-purple-600 hover:text-white transition-all duration-300">
                            Write Your First Blog
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-24 pb-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Page Header -->
            <div class="text-center mb-16">
                <h1 class="text-4xl lg:text-6xl font-bold mb-6">
                    Discover 
                    <span class="bg-gradient-to-r from-primary via-secondary to-accent bg-clip-text text-transparent">
                        Amazing Blogs
                    </span>
                </h1>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
                    Explore insights from our community of tech writers and industry experts. 
                    Stay updated with the latest trends and innovations.
                </p>
                <div class="mt-8 flex justify-center">
                    <div class="bg-white rounded-full px-6 py-3 shadow-lg border border-gray-200">
                        <span class="text-gray-700 font-medium">
                            📚 <%= blogs.length %> Blog<%= blogs.length !== 1 ? 's' : '' %> Available
                        </span>
                    </div>
                </div>
            </div>

            <!-- Search and Filter Bar -->
            <div class="mb-12">
                <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100">
                    <div class="flex flex-col md:flex-row gap-4 items-center">
                        <div class="flex-1">
                            <div class="relative">
                                <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"/>
                                </svg>
                                <input type="text" id="searchInput" placeholder="Search blogs..." 
                                       class="w-full pl-10 pr-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent transition-all">
                            </div>
                        </div>
                        <select id="sortSelect" class="px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-primary focus:border-transparent">
                            <option value="newest">Newest First</option>
                            <option value="oldest">Oldest First</option>
                            <option value="title">A-Z</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Blogs Grid -->
            <div id="blogsContainer" class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                <% if(blogs && blogs.length > 0) { %>
                    <% blogs.forEach(function(blog) { %>
                        <a href="/blog/<%= blog._id %>">
                            <article class="blog-card group cursor-pointer" data-title="<%= blog.title.toLowerCase() %>" data-author="<%= blog.createdBy ? blog.createdBy.fullname.toLowerCase() : 'unknown' %>">
                                <div class="bg-white rounded-2xl overflow-hidden shadow-sm hover-lift border border-gray-100 h-full">
                                    <!-- Blog Image -->
                                    <div class="h-48 relative overflow-hidden">
                                        <% if(blog.coverImageUrl) { %>
                                            <img src="<%= blog.coverImageUrl %>" 
                                                 alt="<%= blog.title %>" 
                                                 class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                                                 onerror="this.src='https://images.unsplash.com/photo-1432888622747-4eb9a8efeb07?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'">
                                        <% } else { %>
                                            <div class="w-full h-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center">
                                                <svg class="w-16 h-16 text-white/80" fill="currentColor" viewBox="0 0 20 20">
                                                    <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"/>
                                                    <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"/>
                                                </svg>
                                            </div>
                                        <% } %>
                                        <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                                    </div>
    
                                    <!-- Blog Content -->
                                    <div class="p-6 flex flex-col h-full">
                                        <!-- Author Info -->
                                        <div class="flex items-center space-x-3 mb-4">
                                            <% if(blog.createdBy?.profileImage) { %>
                                                <img src="<%= blog.createdBy.profileImage %>" 
                                                     alt="<%= blog.createdBy.fullname %>" 
                                                     class="w-8 h-8 rounded-full object-cover">
                                            <% } else { %>
                                                <div class="w-8 h-8 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center">
                                                    <span class="text-white text-xs font-semibold">
                                                        <%= blog.createdBy?.fullname.charAt(0).toUpperCase() %>
                                                    </span>
                                                </div>
                                            <% } %>
                                            <div class="flex-1 min-w-0">
                                                <p class="text-sm font-medium text-gray-900 truncate">
                                                    <%= blog.createdBy?.fullname %>
                                                </p>
                                                <p class="text-sm text-gray-500">
                                                    <%= new Date(blog.createdAt).toLocaleDateString('en-US', { 
                                                        year: 'numeric', 
                                                        month: 'short', 
                                                        day: 'numeric' 
                                                    }) %>
                                                </p>
                                            </div>
                                        </div>
    
                                        <!-- Blog Title -->
                                        <h3 class="text-xl font-bold mb-3 group-hover:text-primary transition-colors line-clamp-2">
                                            <%= blog.title %>
                                        </h3>
    
                                        <!-- Blog Description -->
                                        <p class="text-gray-600 line-clamp-3 mb-4 flex-grow">
                                            <%= blog.blogDesc %>
                                        </p>
    
                                        <!-- Read More Button -->
                                        <div class="mt-auto">
                                            <a href="/blog/<%= blog._id %>" 
                                               class="inline-flex items-center text-primary font-semibold hover:text-primary-dark transition-colors group/link">
                                                Read Full Article
                                                <svg class="w-4 h-4 ml-2 group-hover/link:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                                                </svg>
                                            </a>
                                        </div>
    
                                        <!-- Tags (if you have them) -->
                                        <% if(blog.tags && blog.tags.length > 0) { %>
                                            <div class="flex flex-wrap gap-2 mt-4 pt-4 border-t border-gray-100">
                                                <% blog.tags.forEach(function(tag) { %>
                                                    <span class="px-2 py-1 text-xs font-medium bg-primary/10 text-primary rounded-full">
                                                        #<%= tag %>
                                                    </span>
                                                <% }) %>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </article>
                        </a>
                    <% }) %>
                <% } else { %>
                    <!-- No Blogs Found -->
                    <div class="col-span-full text-center py-16">
                        <div class="max-w-md mx-auto">
                            <div class="w-24 h-24 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center mx-auto mb-6">
                                <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"/>
                                    <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"/>
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-900 mb-3">No Blogs Found</h3>
                            <p class="text-gray-600 mb-6">
                                Be the first to share your insights with our community.
                            </p>
                            <a href="/blog/createblog" 
                               class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-primary to-primary-dark text-white rounded-full font-semibold hover:shadow-xl hover:scale-105 transition-all">
                                Write Your First Blog
                                <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white py-16">
        <div class="container mx-auto px-6">
            <div class="text-center">
                <div class="flex items-center justify-center space-x-3 mb-6">
                    <div class="w-10 h-10 bg-gradient-to-br from-primary to-secondary rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M2 5a2 2 0 012-2h7a2 2 0 012 2v4a2 2 0 01-2 2H9l-3 3v-3H4a2 2 0 01-2-2V5z"/>
                            <path d="M15 7v2a4 4 0 01-4 4H9.828l-1.766 1.767c.28.149.599.233.938.233h2l3 3v-3h2a2 2 0 002-2V9a2 2 0 00-2-2h-1z"/>
                        </svg>
                    </div>
                    <span class="text-xl font-bold">Blogitech.io</span>
                </div>
                <p class="text-gray-400 mb-8">
                    Your gateway to tomorrow's technology. Discover, learn, and share the latest in tech innovation.
                </p>
                <div class="border-t border-gray-800 pt-8 text-gray-400">
                    <p>&copy; 2024 Blogitech.io. All rights reserved. Built with ❤️ for tech enthusiasts.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript for Search and Filter -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const sortSelect = document.getElementById('sortSelect');
            const blogsContainer = document.getElementById('blogsContainer');
            const blogCards = Array.from(document.querySelectorAll('.blog-card'));

            // Search functionality
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                
                blogCards.forEach(card => {
                    const title = card.dataset.title;
                    const author = card.dataset.author;
                    
                    if (title.includes(searchTerm) || author.includes(searchTerm)) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });

            // Sort functionality
            sortSelect.addEventListener('change', function() {
                const sortValue = this.value;
                const sortedCards = [...blogCards];

                sortedCards.sort((a, b) => {
                    switch(sortValue) {
                        case 'newest':
                            return new Date(b.dataset.date) - new Date(a.dataset.date);
                        case 'oldest':
                            return new Date(a.dataset.date) - new Date(b.dataset.date);
                        case 'title':
                            return a.dataset.title.localeCompare(b.dataset.title);
                        default:
                            return 0;
                    }
                });

                // Re-append sorted cards
                sortedCards.forEach(card => {
                    blogsContainer.appendChild(card);
                });
            });

            // Initial sort (newest first)
            sortSelect.dispatchEvent(new Event('change'));
        });
    </script>
</body>
</html>