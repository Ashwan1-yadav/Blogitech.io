<%- include("./partials/header") %>
<header class="sticky top-0 bg-indigo-100 shadow-md">
    <div class="container flex flex-col sm:flex-row justify-between items-center mx-auto py-2 px-4">
        <div class="flex items-center text-2xl">
            <div class="w-12 mr-3">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
                    <path fill="#BEE3F8" d="M44,7L4,23l40,16l-7-16L44,7z M36,23H17l18-7l1,6V23z"></path>
                    <path fill="#3182CE"
                        d="M40.212,10.669l-5.044,11.529L34.817,23l0.351,0.802l5.044,11.529L9.385,23L40.212,10.669 M44,7L4,23 l40,16l-7-16L44,7L44,7z">
                    </path>
                    <path fill="#3182CE"
                        d="M36,22l-1-6l-18,7l17,7l-2-5l-8-2h12V22z M27.661,21l5.771-2.244L33.806,21H27.661z">
                    </path>
                </svg>
            </div>
            <img src="../public/images/Blogism.io.svg" alt="">
            <a class="font-bold text-3xl cursor-pointer" href="/home">Blogitech.io</a>
        </div>
        <div class="flex mt-2 sm:mt-0 text-lg font-semibold">
            <a class="px-4" href="/">Home</a>
            <a class="px-4" href="/">Latest trends</a>
            <a class="px-4" href="/blog/createblog">Write A Blog</a>
            
        </div>
        <div class="hidden md:block">
            <% if(locals.user){ %>
                <div class="flex justify-center ">
                    <img class="mt-2 h-[40px] object-cover border-1 rounded-full border-indigo-500" src="<%= locals.user.profileImage %>" alt="">
                    <p class="mt-3 mx-3 font-semibold"><%= locals.user.fullname %></p>
                    <a href="/user/logout" type="button"
                    class=" mx-3 mt-[9px] py-2 px-4 shadow-md text-sm font-semibold bg-purple-500 hover:bg-teal-600 rounded text-black ">Logout
                </a>
                </div>
            <% } else { %>
                <a href="/user/signup" type="button"
                class=" mx-3 py-2 px-4 shadow-md text-sm font-semibold bg-purple-600 hover:bg-teal-600 rounded text-white ">Sign Up
            </a>
                <a href="/user/signin" type="button"
                    class=" py-2 px-4 shadow-md text-sm font-semibold bg-purple-600 hover:bg-teal-600 rounded text-white ">Login
                </a>
            <% }%>
            
              
          </div>
        
         
      
    </div>
</header>

<div class="w-full h-full bg-indigo-200 dark:bg-gray-800">
    <div class="w-full mx-auto py-5 bg-white dark:bg-gray-800">
        <!--  -->
        

        <!--  -->
        <h1 class="w-[92%] mx-auto lg:text-5xl md:text-4xl xs:text-3xl text-center font-sans font-semibold pb-4 pt-8 dark:text-black mb-[10px] mt-[-50px] text-3xl">
            <%= blog.title %>
            <hr class="mt-3">
        </h1>

        <!-- Blog Cover -->
        <img src="<%= blog.coverImageUrl %>" alt="Blog Cover" class="xl:w-[80%] xs:w-[96%] mx-auto lg:h-[520px] md:h-[480px] rounded-xl shadow-lg border-black border-2 mt-[-10px]" />

        <!-- Blog Info -->
        <div class="w-[90%] mx-auto flex md:gap-4 xs:gap-2 justify-center items-center pt-4">
            <p class="font-semibold">Posted By : </p>
            <div class="flex gap-2 items-center">
                <img src="<%= blog.createdBy.profileImage%>" alt="Bloger Profile" class="md:w-[2.2rem] md:h-[2.2rem] xs:w-[2rem] xs:h-[2rem] rounded-full" />
                <h2 class="text-sm font-semibold dark:text-white text-black"><%= blog.createdBy.fullname%></h2>
            </div>
            <div class="dark:text-gray-500">|</div>

            <h3 class="text-sm font-semibold text-black dark:text-gray-400"><%= (blog.createdAt).toUTCString().slice(0,17)%></h3>

            
        </div>

        <!-- Blog -->
        <div class="py-6 bg-white dark:bg-gray-800">
            <div class="md:w-[80%] xs:w-[90%] mx-auto pt-4">
                <hr class="mb-3 mt-[-30px]">
                <p class=" h-full wrap font-sans text-lg ">
                    <%= blog.blogDesc %>
                </p>
            </div>
        </div>

    </div>
</div>