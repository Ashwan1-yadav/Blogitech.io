<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/header") %>
    <title>Document</title>
</head>
<body>
    <%- include("./partials/navbar") %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageUrl %>" alt="" height="500px">
        <p class="mt-4"><%= blog.blogDesc %></p>
        <p>Posted By : </p>
        <div class="container">
            <img src="<%= blog.createdBy.profileImage%>" alt="" height="50px">
        <%= blog.createdBy.fullname%>
        </div>
        <div class="container mt-4">
            <h4>Comments : (<%= comments.length %>)</h4>
            <% if(locals.user) {%>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="container mb-3">
                    <input type="text" name="content" class="form-control"
                    placeholder="write your comment">
                    <button type="submit" class="btn btn-sm btn-warning mt-2">Add Comment</button>
                </div>
            </form>
            <div class="mt-3">
                <% comments.forEach(comment => {%>
                    <div class="container">
                        <img src="" class="h-[20px]" alt=""><%= comment.commentedBy.fullname %>
                        <p class="mx-5"><%= comment.content %></p>
                    </div>
                <% }); %>
            </div>
        </div>
        <% } %>
    </div>
    <%- include("./partials/scripts") %>
</body>
</html>