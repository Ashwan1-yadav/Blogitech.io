<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Blog - Blogitech.io</title>
    <link rel="shortcut icon" href="/images/Untitled-1.png" type="image/x-icon">

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary': '#6366f1',
                        'primary-dark': '#4f46e5',
                        'secondary': '#ec4899',
                        'accent': '#06b6d4',
                        'dark': '#0f172a',
                    }
                }
            }
        }
    </script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        body { font-family: 'Inter', sans-serif; }
        .gradient-bg { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
        .glass-effect { backdrop-filter: blur(20px); background: rgba(255, 255, 255, 0.9); }
    </style>
</head>
<body class="bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-100 min-h-screen">
    <!-- Modern Header -->
    <nav class="fixed top-0 w-full z-50 glass-effect animate-fade-in">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-3 animate-scale-in">
                    <div class="w-10 h-10 bg-gradient-to-r from-purple-500 to-blue-500 rounded-xl flex items-center justify-center animate-glow">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" class="w-6 h-6 text-white">
                            <path fill="currentColor" d="M44,7L4,23l40,16l-7-16L44,7z M36,23H17l18-7l1,6V23z"></path>
                            <path fill="currentColor"
                                d="M40.212,10.669l-5.044,11.529L34.817,23l0.351,0.802l5.044,11.529L9.385,23L40.212,10.669 M44,7L4,23 l40,16l-7-16L44,7L44,7z">
                            </path>
                            <path fill="currentColor"
                                d="M36,22l-1-6l-18,7l17,7l-2-5l-8-2h12V22z M27.661,21l5.771-2.244L33.806,21H27.661z">
                            </path>
                        </svg>
                    </div>
                    <img src="../public/images/Blogism.io.svg" alt="" class="h-6">
                    <a class="text-2xl font-bold gradient-text cursor-pointer" href="/home">Blogitech.io</a>
                </div>
                
                <div class="hidden md:flex space-x-8">
                    <a href="/" class="text-gray-700 hover:text-purple-600 font-medium transition-all duration-300 hover:scale-105">Home</a>
                    <a href="" class="text-gray-700 hover:text-purple-600 font-medium transition-all duration-300 hover:scale-105">Latest Trends</a>
                    <a href="/blog/createblog" class="text-gray-700 hover:text-purple-600 font-medium transition-all duration-300 hover:scale-105">Write A Blog</a>
                </div>
                
                <div class="flex items-center space-x-4">
                    <% if(locals.user){ %>
                        <div class="flex items-center space-x-3">
                            <div class="relative">
                                <img class="w-10 h-10 object-cover rounded-full border-2 border-purple-500 ring-2 ring-purple-100" src="<%= locals.user.profileImage %>" alt="Profile">
                                <div class="absolute -bottom-1 -right-1 w-4 h-4 bg-green-500 rounded-full border-2 border-white"></div>
                            </div>
                            <p class="font-semibold text-gray-700"><%= locals.user.fullname %></p>
                            <a href="/user/logout" 
                               class="px-6 py-2 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-full font-semibold hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
                                Logout
                            </a>
                        </div>
                    <% } else { %>
                        <a href="/user/signup" 
                           class="px-6 py-2 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-full font-semibold hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
                            Sign Up
                        </a>
                        <a href="/user/signin" 
                           class="px-6 py-2 border border-purple-600 text-purple-600 rounded-full font-semibold hover:bg-purple-600 hover:text-white transition-all duration-300">
                            Login
                        </a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mx-auto px-6 py-12">
        <div class="max-w-4xl mx-auto">
            <!-- Header Section -->
            <div class="text-center mb-12">
                <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
                    Create Your
                    <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                        Tech Story
                    </span>
                </h1>
                <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                    Share your insights, experiences, and knowledge with the tech community
                </p>
            </div>

            
            <!-- Blog Creation Form -->
            <div class="bg-white/80 backdrop-blur-xl rounded-3xl shadow-xl border border-white/20 overflow-hidden">
                <div class="p-8 lg:p-12">
                    <form action="/blog/createblog" method="post" enctype="multipart/form-data" class="space-y-8">
                        <!-- Blog Title -->
                        <div>
                            <label for="title" class="block text-sm font-semibold text-gray-700 mb-3">
                                Blog Title
                                <span class="text-red-500">*</span>
                            </label>
                            <input 
                                type="text" 
                                id="title"
                                name="title"
                                class="w-full px-6 py-4 text-lg border border-gray-200 rounded-2xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all bg-gray-50/50 hover:bg-white focus:bg-white placeholder-gray-400"
                                placeholder="Enter an engaging title for your blog post..."
                                required
                            >
                            <p class="text-sm text-gray-500 mt-2">A compelling title helps attract readers to your content</p>
                        </div>

                        <!-- Cover Image Upload -->
                        <div>
                            <label for="coverImage" class="block text-sm font-semibold text-gray-700 mb-3">
                                Cover Image
                                <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <input 
                                    type="file" 
                                    id="coverImage"
                                    name="coverImageUrl"
                                    accept="image/*"
                                    class="hidden"
                                    required
                                >
                                <div id="uploadArea" class="border-2 border-dashed border-gray-300 rounded-2xl p-8 text-center hover:border-primary/50 transition-colors cursor-pointer bg-gray-50/30">
                                    <div id="uploadContent">
                                        <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                                        </svg>
                                        <h3 class="text-lg font-semibold text-gray-900 mb-2">Upload Cover Image</h3>
                                        <p class="text-gray-600 mb-4">Click to browse or drag and drop your image</p>
                                        <p class="text-sm text-gray-500">Supports: JPG, PNG, WebP (Max: 5MB)</p>
                                    </div>
                                    <div id="imagePreview" class="hidden">
                                        <img id="previewImg" class="max-h-64 mx-auto rounded-xl shadow-lg">
                                        <button type="button" id="removeImage" class="mt-4 px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors">
                                            Remove Image
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Blog Content -->
                        <div>
                            <label for="content" class="block text-sm font-semibold text-gray-700 mb-3">
                                Blog Content
                                <span class="text-red-500">*</span>
                            </label>
                            <div class="relative">
                                <textarea 
                                    id="content"
                                    name="blogDesc"
                                    rows="16"
                                    class="w-full px-6 py-4 border border-gray-200 rounded-2xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all bg-gray-50/50 hover:bg-white focus:bg-white placeholder-gray-400 resize-none"
                                    placeholder="Share your tech insights, experiences, and knowledge here...

Tips for great content:
• Start with a compelling introduction
• Use clear headings and structure
• Include examples and practical insights
• End with a strong conclusion or call-to-action"
                                    required
                                ></textarea>
                                <div class="absolute bottom-4 right-4 text-sm text-gray-400">
                                    <span id="wordCount">0</span> words
                                </div>
                            </div>
                            <div class="flex justify-between text-sm text-gray-500 mt-2">
                                <span>Write in-depth content to provide maximum value to readers</span>
                                <span>Minimum 100 words recommended</span>
                            </div>
                        </div>

                        <!-- Tags Section -->
                        <div>
                            <label for="tags" class="block text-sm font-semibold text-gray-700 mb-3">
                                Tags (Optional)
                            </label>
                            <input 
                                type="text" 
                                id="tags"
                                name="tags"
                                class="w-full px-6 py-4 border border-gray-200 rounded-2xl focus:ring-2 focus:ring-primary/20 focus:border-primary transition-all bg-gray-50/50 hover:bg-white focus:bg-white placeholder-gray-400"
                                placeholder="javascript, react, web development, ai, machine learning..."
                            >
                            <p class="text-sm text-gray-500 mt-2">Add relevant tags separated by commas to help readers find your content</p>
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex flex-col sm:flex-row gap-4 pt-8 border-t border-gray-200">
                            <button 
                                type="submit"
                                class="flex-1 bg-gradient-to-r from-primary to-primary-dark text-white py-4 px-8 rounded-2xl font-semibold hover:shadow-lg hover:scale-[1.02] transition-all duration-200 flex items-center justify-center"
                            >
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                                </svg>
                                Publish Blog
                            </button>
                            
                            <button 
                                type="button"
                                class="sm:w-auto px-8 py-4 border-2 border-gray-300 text-gray-700 rounded-2xl font-semibold hover:border-gray-400 hover:bg-gray-50 transition-all flex items-center justify-center"
                            >
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3-3m0 0l-3 3m3-3v12"/>
                                </svg>
                                Save Draft
                            </button>
                            
                            <button 
                                type="reset"
                                class="sm:w-auto px-8 py-4 text-gray-600 hover:text-gray-800 transition-colors flex items-center justify-center"
                            >
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                                </svg>
                                Reset
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Writing Tips -->
            <div class="mt-12 bg-gradient-to-r from-primary/5 to-secondary/5 rounded-2xl p-8 border border-primary/10">
                <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
                    <svg class="w-6 h-6 text-primary mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                    </svg>
                    Writing Tips for Better Engagement
                </h3>
                <div class="grid md:grid-cols-2 gap-6">
                    <div class="space-y-4">
                        <div class="flex items-start space-x-3">
                            <div class="w-6 h-6 bg-primary/20 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                                <svg class="w-3 h-3 text-primary" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-900">Hook Your Readers</h4>
                                <p class="text-gray-600">Start with a compelling question or surprising fact</p>
                            </div>
                        </div>
                        <div class="flex items-start space-x-3">
                            <div class="w-6 h-6 bg-primary/20 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                                <svg class="w-3 h-3 text-primary" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-900">Use Clear Structure</h4>
                                <p class="text-gray-600">Break content into digestible sections with headings</p>
                            </div>
                        </div>
                        <div class="flex items-start space-x-3">
                            <div class="w-6 h-6 bg-primary/20 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                                <svg class="w-3 h-3 text-primary" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-900">Include Examples</h4>
                                <p class="text-gray-600">Real-world examples make concepts easier to understand</p>
                            </div>
                        </div>
                    </div>
                    <div class="space-y-4">
                        <div class="flex items-start space-x-3">
                            <div class="w-6 h-6 bg-secondary/20 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                                <svg class="w-3 h-3 text-secondary" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-900">Share Personal Insights</h4>
                                <p class="text-gray-600">Your unique perspective adds value and authenticity</p>
                            </div>
                        </div>
                        <div class="flex items-start space-x-3">
                            <div class="w-6 h-6 bg-secondary/20 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                                <svg class="w-3 h-3 text-secondary" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-900">End with Action</h4>
                                <p class="text-gray-600">Encourage readers to comment, share, or try something</p>
                            </div>
                        </div>
                        <div class="flex items-start space-x-3">
                            <div class="w-6 h-6 bg-secondary/20 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                                <svg class="w-3 h-3 text-secondary" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                            <div>
                                <h4 class="font-semibold text-gray-900">Proofread Carefully</h4>
                                <p class="text-gray-600">Clean, error-free content builds trust and credibility</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        // Image upload functionality
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('coverImage');
        const uploadContent = document.getElementById('uploadContent');
        const imagePreview = document.getElementById('imagePreview');
        const previewImg = document.getElementById('previewImg');
        const removeBtn = document.getElementById('removeImage');

        uploadArea.addEventListener('click', () => fileInput.click());
        
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('border-primary', 'bg-primary/5');
        });
        
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('border-primary', 'bg-primary/5');
        });
        
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('border-primary', 'bg-primary/5');
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                handleFileUpload(files[0]);
            }
        });

        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length > 0) {
                handleFileUpload(e.target.files[0]);
            }
        });

        function handleFileUpload(file) {
            if (file && file.type.startsWith('image/')) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    previewImg.src = e.target.result;
                    uploadContent.classList.add('hidden');
                    imagePreview.classList.remove('hidden');
                };
                reader.readAsDataURL(file);
            }
        }

        removeBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            fileInput.value = '';
            uploadContent.classList.remove('hidden');
            imagePreview.classList.add('hidden');
        });

        // Word count functionality
        const contentTextarea = document.getElementById('content');
        const wordCountSpan = document.getElementById('wordCount');

        contentTextarea.addEventListener('input', () => {
            const words = contentTextarea.value.trim().split(/\s+/).filter(word => word.length > 0);
            wordCountSpan.textContent = words.length;
        });

        // Auto-save functionality (mock)
        let autoSaveTimeout;
        const autoSave = () => {
            clearTimeout(autoSaveTimeout);
            autoSaveTimeout = setTimeout(() => {
                console.log('Auto-saving draft...');
                // Here you would implement actual auto-save functionality
            }, 5000);
        };

        document.querySelectorAll('input, textarea').forEach(input => {
            input.addEventListener('input', autoSave);
        });

        // Form validation
        document.querySelector('form').addEventListener('submit', (e) => {
            const title = document.getElementById('title').value.trim();
            const content = document.getElementById('content').value.trim();
            const coverImage = document.getElementById('coverImage').files[0];

            if (!title || !content || !coverImage) {
                e.preventDefault();
                alert('Please fill in all required fields including title, content, and cover image.');
                return;
            }

            if (content.split(/\s+/).length < 50) {
                e.preventDefault();
                alert('Please write at least 50 words for better content quality.');
                return;
            }
        });

        // Save draft functionality
        document.querySelector('button[type="button"]').addEventListener('click', () => {
            const formData = new FormData();
            formData.append('title', document.getElementById('title').value);
            formData.append('content', document.getElementById('content').value);
            formData.append('tags', document.getElementById('tags').value);
            formData.append('isDraft', true);
            
            // Here you would send the draft to your server
            console.log('Saving draft...');
            alert('Draft saved successfully!');
        });
    </script>
</body>
</html>