<%- include("./partials/header") %>
<header class="sticky top-0 bg-indigo-100 shadow-md">
  <div class="container flex flex-col sm:flex-row justify-between items-center mx-auto py-2 px-4">
      <div class="flex items-center text-2xl">
          <div class="w-12 mr-3">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
                  <path fill="#BEE3F8" d="M44,7L4,23l40,16l-7-16L44,7z M36,23H17l18-7l1,6V23z"></path>
                  <path fill="#3182CE"
                      d="M40.212,10.669l-5.044,11.529L34.817,23l0.351,0.802l5.044,11.529L9.385,23L40.212,10.669 M44,7L4,23 l40,16l-7-16L44,7L44,7z">
                  </path>
                  <path fill="#3182CE"
                      d="M36,22l-1-6l-18,7l17,7l-2-5l-8-2h12V22z M27.661,21l5.771-2.244L33.806,21H27.661z">
                  </path>
              </svg>
          </div>
          <img src="../public/images/Blogism.io.svg" alt="">
          <a class="font-bold text-3xl cursor-pointer" href="/home">Blogitech.io</a>
      </div>
      <div class="flex mt-2 sm:mt-0 text-lg font-semibold">
          <a class="px-4" href="/">Home</a>
          <a class="px-4" href="/">Latest trends</a>
          <a class="px-4" href="/blog/createblog">Write A Blog</a>
          
      </div>
      <div class="flex justify-center ">
          <img class="mt-2 h-[40px] object-cover border-1 rounded-full border-red-500" src="<%= locals.user.profileImage %>" alt="">
          <p class="mt-3 mx-3 font-semibold"><%= locals.user.fullname %></p>
          <a href="/user/logout" type="button"
          class=" mx-3 mt-[9px] py-2 px-4 shadow-md text-sm font-semibold bg-red-500 hover:bg-teal-600 rounded text-black ">Logout
      </a>
      </div>
      
       
    
  </div>
</header>
<% if(locals.error) { %>
  <div class="text-red-600 mt-4 bg-red-100 opacity-0.01 py-2 px-4 rounded-lg shadow-md border-gray-200 font-semibold"><%= locals.error %></div>
<% } %>
<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12 mt-[-50px]">
    <div class="relative py-3 sm:max-w-xl sm:mx-auto">
      <div class="relative px-4 py-10 bg-white mx-8 md:mx-0 shadow rounded-3xl sm:p-10">
        <div class="max-w-md mx-auto">
          <div class="flex items-center space-x-5">
            <div class="h-[50px]  mx-[4px] flex">
                <div class="w-10 mr-3 mx-3">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
                    <path
                      fill="#BEE3F8"
                      d="M44,7L4,23l40,16l-7-16L44,7z M36,23H17l18-7l1,6V23z"
                    ></path>
                    <path
                      fill="#3182CE"
                      d="M40.212,10.669l-5.044,11.529L34.817,23l0.351,0.802l5.044,11.529L9.385,23L40.212,10.669 M44,7L4,23 l40,16l-7-16L44,7L44,7z"
                    ></path>
                    <path
                      fill="#3182CE"
                      d="M36,22l-1-6l-18,7l17,7l-2-5l-8-2h12V22z M27.661,21l5.771-2.244L33.806,21H27.661z"
                    ></path>
                  </svg>
                </div>
               
              </div>
            <div class="block  font-semibold text-xl self-start text-gray-700">
              <h2 class="leading-relaxed text-2xl">Create a new blog</h2>
              <p class="text-sm text-gray-500 font-normal leading-relaxed">Fill all required fields and press Create button</p>
            </div>
          </div>
          <div class="divide-y divide-gray-200">
            <div class="py-8 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
              <form action="/blog/createblog" method="post" enctype="multipart/form-data">
                <div class="flex flex-col">
                    <label class="leading-loose font-semibold">Blog
                        Title</label>
                    <input type="text" class="px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="Blog title"
                    name="title">
                  </div>
                  
              
              <div class="flex flex-col">
                <label class="leading-loose font-semibold">Blog Content</label>
                <textarea  class="px-4 py-4 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" name="blogDesc"></textarea>
              </div>
  
              <div class="flex flex-col">
                <label class="leading-loose font-semibold">Blog Cover Image</label>
                <input type="file" class="px-4 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="Optional"
                name="coverImageUrl">
              </div>
            </div>
            <div class="pt-4 flex items-center space-x-4">
                <button type="reset" class="flex justify-center items-center w-full text-gray-900 px-4 py-3 rounded-md focus:outline-none font-semibold">
                  <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg> Reset
                </button>
                <button class="bg-blue-500 flex justify-center items-center w-full text-white px-4 py-3 rounded-md focus:outline-none
                hover:bg-teal-600 font-semibold">Create</button>
            </div>
        </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  